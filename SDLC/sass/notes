1.  Accordion
-------------
<div class="accordion" id="accordionExample">
     <div class="accordion-item">
       <h2 class="accordion-header">
         <button class="accordion-button collapsed" data-bs-toggle="collapse"data-bs-target="#collapseOne">content #1</button>
       </h2>
       <div id="collapseOne"data-bs-parent="#accordionExample" class="accordion-collapse collapsed">
        <div class="accordion-body"><h1>This is the first item‚Äôs accordion body.</h1></div>
       </div>
     </div>
      <div class="accordion-item">
       <h2 class="accordion-header">
         <button class="accordion-button collapsed" data-bs-toggle="collapse"data-bs-target="#collapseTwo">content #2</button>
       </h2>
       <div id="collapseTwo" data-bs-parent="#accordionExample" class="accordion-collapse collapse">
        <div class="accordion-body"><h1>This is the first item‚Äôs accordion body.</h1></div>
       </div>
     </div>

   </div>
   <!-- if we removed the data-bs-parent="accordionExample" we can open multiple accordion -->


   2.Alert
   -------

    <div id="liveAlertPlaceholder"></div>
<button type="button" class="btn btn-primary" id="liveAlertBtn">Show live alert</button>

<script>
  const alertPlaceholder = document.getElementById('liveAlertPlaceholder')
  //getting the id of the alert div to append in wrapper variable 
const appendAlert = (message, type) => {
  //getting two parameters message and type 
  const wrapper = document.createElement('div')
  //creating the new div and saved in the wrapper variable
  wrapper.innerHTML = [
    `<div class="alert alert-${type} alert-dismissible" role="alert">`,
    `   <div>${message}</div>`,
    '   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
    '</div>'
    //creating a div element and giving the parameter values
  ].join('')

  alertPlaceholder.append(wrapper)
  //apending the values of alertplaceholder in the wrapper variable 
}

const alertTrigger = document.getElementById('liveAlertBtn')
if (alertTrigger) {
  alertTrigger.addEventListener('click', () => {
    appendAlert('Nice, you triggered this alert message!', 'success')
  })
}

